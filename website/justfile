# Cross-Docs Website Development

# Default recipe - show available commands
default:
    @just --list

# Install all dependencies (from workspace root)
install:
    cd .. && uv sync && uv run python -m pybun install

# Run the dev server (lifespan handles Vite automatically)
dev:
    uv run python app.py

# Build the frontend for production
build:
    uv run python -m pybun run build

# Build SSR bundle for production
build-ssr:
    uv run python -m pybun run build:ssr

# Build everything for production
build-all: build build-ssr

# Clean build artifacts
clean:
    rm -rf frontend/dist node_modules .venv __pycache__ ../node_modules

# Setup everything from scratch
setup: install
    @echo "Ready! Run 'just dev' to start developing."
